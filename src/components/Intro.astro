---

import Logo from './Logo.astro';

import { getI18n } from '@/i18n';
const { currentLocale } = Astro;
const i18n = getI18n({currentLocale})

---

<section class="text-xl text-left px-20 max-w-[80ch] text-pretty mx-auto my-24">
    <Logo class="w-16 text-white mb-10 m-auto"/>
    <h1 class="text-5xl font-semibold text-center text-wrap mx-auto mb-10 tracking-wide">
        {i18n.INTRO_TITLE}<br />{i18n.INTRO_TITLE_AFTER_BR}
    </h1>
    <p set:html={i18n.INTRO_DESCRIPTION_1}></p>
    <p set:html={i18n.INTRO_DESCRIPTION_2}></p>
    <p set:html={i18n.INTRO_DESCRIPTION_3}></p>
</section>