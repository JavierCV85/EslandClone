---
import Layout from '@/layouts/Layout.astro';
import Video from '@/components/Video.astro';
import Intro from '@/components/Intro.astro';
import Bento from '@/components/Bento.astro';
import Prefooter from '@/components/Prefooter.astro';

import { getI18n } from '@/i18n';
const { currentLocale } = Astro;
const i18n = getI18n({currentLocale})
---

<Layout 
	title={i18n.SEO_TITLE}
	description={i18n.SEO_DESCRIPTION}
>
	<link rel="preload" href="/fonts/jura.woff2" as="font" type="font/woff2" crossorigin slot="preload" />
	<Video />
	<main>
		<Intro />
		<Bento />
		<Prefooter />
	</main>		
</Layout>

