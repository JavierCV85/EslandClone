---

import 'photoswipe/style.css';

const GALLERY_IMAGES = [
    
]

---

<div class="grid grid-cols-3 max-w-6xl gap-6 mx-auto py-20" id="gallery">
  {
    Array.from({ length: 9 }).map((_,i) => (
      <a
        class="group rounded-xl transition-all hover:scale-105 relative"
        href={`/archivo-page/1/gallery/img-${i + 1}.webp`}
        target="_blank"
      >
        <img 
          class="blur-xl absolute inset-0 transition 
          group-hover:contrast-150 opacity-75 -z-10"
          loading="lazy"
          src={`/archivo-page/1/gallery/thumbnails/img-${i + 1}.webp`}
          alt=""
        />
        <img 
          class="rounded-xl"
          loading="lazy"
          src={`/archivo-page/1/gallery/thumbnails/img-${i + 1}.webp`}
          alt=""
        />
      </a>
    ))
  }
</div>

<script>
    import PhotoSwipeLightbox from 'photoswipe/lightbox';

    const lightbox = new PhotoSwipeLightbox({
      gallery: '#gallery',
      children: 'a',
      pswpModule: () => import('photoswipe')
    });
    lightbox.init();
</script>
