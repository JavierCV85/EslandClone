---

import 'photoswipe/style.css';

const GALLERY_IMAGES = [
    
]

---

<div class="grid grid-cols-3 max-w-6xl gap-6 mx-auto py-20" id="gallery">
  {
    Array.from({ length: 9 }).map((_,i) => (
      <a
        class="rounded-xl shadow-xl shadow-blue-400/10
        hover:shadow-2xl hover:shadow-sky-300/75 transition-all
        overflow-hidden hover:scale-105"
        href={`/archivo-page/1/gallery/img-${i + 1}.webp`}
        target="_blank"
      >
        <img 
          src={`/archivo-page/1/gallery/thumbnails/img-${i + 1}.webp`}
        />
      </a>
    ))
  }
</div>

<script>
    import PhotoSwipeLightbox from 'photoswipe/lightbox';

    const lightbox = new PhotoSwipeLightbox({
      gallery: '#gallery',
      children: 'a',
      pswpModule: () => import('photoswipe')
    });
    lightbox.init();
</script>
