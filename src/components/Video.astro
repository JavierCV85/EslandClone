---
import { getI18n } from '@/i18n';
import Button from "@/components/Button.astro";
import Logo from './Logo.astro';

const { currentLocale } = Astro;
const i18n = getI18n({currentLocale})
---

<div class="w-full relative h-[80vh] max-w-[100vw] md:h-full md:aspect-video">
    <div class="absolute left-1/2 right-0 top-14 z-10 m-auto flex -translate-x-1/2 flex-col items-center w-full">
        <section class="animate-fade-up flex justify-center items-center gap-8 flex-col aspect-[343/350] md:aspect-[343/160] 2xl:aspect-[343/260]">
            <h1 class="flex items-center gap-5 text-4xl md:text-6xl lg:gap-20 lg:text-8xl font-tomaso">
                <span>E</span><span>S</span><span>L</span><Logo class="letter-logo" aria-label="A"/><span>N</span><span>D</span>
            </h1>
            <p class="text-xl lg:text-2xl text-center text-pretty font-jura">PREMIOS A LA COMUNIDAD HISPANOHABLANTE DE STREAMING</p>
        </section>
        <Button class="animate-fade-up" url="https://www.youtube.com/watch?v=1YmpPrqKP-g">{i18n.VIDEO_BUTTON}</Button>
    </div>
    
    <video
        class="w-full h-full object-cover object-top animate-ease-in-out animate-fade animate-duration-1000 cp-v"
        src="/video.webm"
        autoplay
        loop
        muted
        style="clip-path: polygon(0 0, 100% 0, 100% 85%, 50% 100%, 50% 100%, 0 85%);"
    ></video>
    <video
        class="absolute -bottom-48 blur-3xl -z-40"
        src="/video.webm"
        autoplay
        loop
        muted
    ></video>
</div>

<style>
    @font-face {
        font-family: "Tomaso";
        font-style: normal;
        font-weight: normal;
        font-display: swap;
        src:url("/fonts/tomaso.woff2") format("woff2");
        unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
    }

    @font-face {
        font-family: "Jura";
        font-style: normal;
        font-weight: 400;
        font-display: swap;
        src: url("/fonts/jura.woff2") format("woff2");
        unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
    }

    h1 .letter-logo {
        width: 50px;
        height: 46px;
        background-position: center;
        background-size: contain;
        scale: 1.2;
    }

    @media (width >= 768px) {
        h1 .letter-logo {
        width: 100px;
        height: 66px;
        }
    }

    @media (width >= 992px) {
        h1 .letter-logo {
        height: 96px;
        }
    }
</style>